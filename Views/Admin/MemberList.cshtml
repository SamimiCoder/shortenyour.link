@model IEnumerable<shortenyour.link.Areas.Identity.Data.shortenyourlinkUser>
@{
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>LastName</th>
                    <th>CardNo</th>
                    <th>MEMBER PROCESS</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.CardNo</td>
                        <td>@item.Email</td>
                        <td>
                            <a asp-controller="admin" asp-action="memberDetails" asp-route-id="@item.Id">member Details</a>
                            <a asp-controller="admin" asp-action="BanHim" asp-route-id="@item.Id">BAN USER</a>
                            <a asp-controller="admin" asp-action="hislinks" asp-route-id="@item.Id">HİS LİNKS</a>
                        </td>
                </tr>
                }
            </tbody>
        </table>   
}