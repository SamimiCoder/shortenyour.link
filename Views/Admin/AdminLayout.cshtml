<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <aside>
        <nav>
            <ul>
                <li><a asp-controller="admin" asp-action="MemberList">Member List</a></li>
                <li><a href="https://www.charts.com">Charts</a></li>
                <li>
                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Announcement procedures
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-controller="admin" asp-action="ActiveAnnouncements">ActiveAnnouncements</a></li>
                            <li><a class="dropdown-item" asp-controller="admin" asp-action="AddAnnouncement">AddAnnouncement</a></li>
                        </ul>
                    </div>
                </li>
            </ul>
        </nav>
    </aside>
    <a asp-controller="admin" asp-action="logout">Logout</a>
    <div>
        @RenderBody()
    </div>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
